  <div class="card-wrap">
    <div class="row">
      <div class='mt20 col-md-2'>
        <h2 class="fw-bold"><%= item.name %></h2>
      </div>
      <div class="col-md-8 col-xs-8 table-investment">
      <div class='card-text-block col-md-2'>
        <p><%= t(:investment_duration)%></p>
          <h2 class='fw-bold'><%= item.duration %> <%= t(:days)%></h2>
      </div>
      <div class='card-text-block col-md-2'>
        <p><%= t(:profitability)%></p>
        <h2 class='fw-bold'><%= item.profitability_value(params[:result]) %>%</h2>
      </div>
      <div class='card-text-block col-md-2'>
        <p><%= t(:expected_return)%></p>
          <h2 class='fw-bold'><%= number_to_currency(item.quota(params[:amount], params[:time_value])) %></h2>
      </div>
      </div>
      <!-- Buttons -->
      <div class='col-xs-12 col-sm-6 col-md-3 card-buttons-block'>
        <%= link_to t(:'go_to_investment'), go_to_site_investment_path(item, cid: cid_param), class: 'btn tr-btn--primary btn-block fw-bold', data: { 'ga-event-category': 'investimentos', 'ga-event-action': 'clickout', 'ga-event-label': item.name }, target: :_blank
         %>
        <%= link_to "#card-wrap-info-#{item.id}", class: 'btn btn-block', data: { toggle: :collapse }, 'aria-expanded': false, 'aria-controls': "#card-wrap-info-#{item.id}" do %>
        <span class='display-inline'>Saiba mais</span>
          <span class='display-inline'>
            <i class='fa fa-chevron-down toggle-wrap-open'></i>
            <i class='fa fa-chevron-up toggle-wrap-close'></i>
          </span>
          <% end %>
        </div>
      </div>
      <!-- More Info -->
      <div id="card-wrap-info-<%= item.id %>" class='collapse'>
        <div class='row'>
          <div class='col-md-12'>
            <hr>
            <div class='p10 br3 bg-light-gray'>
              <ul class='info-card'>
                <li>
                  <span class='fw-bold'><%= t('filter_by_broker')%>:</span>
                  <%= item.broker.name %>
                </li>
                  <li>
                  <span class='fw-bold'><%= t(:investment_description)%></span>
                  <%= item.description %>
                </li>
                <li>
                <span class="fw-bold"><%= t(:cdi_taxe)%></span>
                6,39%
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Card Buttons -->
        <div class="row">
        <%= render partial: 'shared/cta_list_buttons_item', locals: {item: item, request_product_label: t('go_to_investment'),
        request_product_path: go_to_site_investment_path(item, cid: cid_param),
        more_info_label: '+ Detalhes do Investimento', more_info_path: investment_path(item, cid: cid_param), display_more_info_button: true}  %>
        </div>
      </div>
    </div>
