<!DOCTYPE html>
<html>
  <head>
    <title><%= @landing.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render('shared/ganalytics') if Rails.env.production? %>
    <%= render('shared/facebook_pixel') if Rails.env.production? %>
    <%= render('shared/smartlook') if Rails.env.production? %>

    <style type='text/css'>
      <%= raw ERB.new(@landing.style).result(binding) %>
    </style>
  </head>
  <body class='<%= @landing.slug %>'>
    <%= raw ERB.new(@landing.html).result(binding) %>
  </body>
</html>
